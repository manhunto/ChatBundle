<ul id="chat">
{% for message in messages %}
    <li>
        <div class="message">
            <span class="author">{{ message.author }}</span>:
            <span class="content">{{ message.message }}</span>
            <div class="date" title="{{ message.insertDate|date }}">{{ message.insertDate|ago }}</div>
        </div>
    </li>
{% endfor %}
</ul>
